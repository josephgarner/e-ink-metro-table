# PTV API Configuration
PTV_API_BASE_URL=https://timetableapi.ptv.vic.gov.au
PTV_DEV_ID=your_dev_id
PTV_API_KEY=your_api_key

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=eink
DB_USER=postgres
DB_PASSWORD=your_password

# Service Configuration
PORT=3001
DATA_COLLECTION_CRON=*/5 * * * *
IMAGE_GENERATION_CRON=*/10 * * * *

# Image Generator Configuration
# URL where the React app is running
IMAGE_GENERATOR_APP_URL=http://localhost:3000
# Local path where to save the generated image
IMAGE_OUTPUT_PATH=./output/display.png
# File store location to upload the image to (optional)
# Examples:
#   Network path: //192.168.1.100/shared/eink
#   Local path: C:/shared/eink
#   HTTP endpoint: http://127.0.0.1:5000/new-path (will append filename automatically)
FILE_STORE_URL=
# Display dimensions
DISPLAY_WIDTH=800
DISPLAY_HEIGHT=480
# Component to render (metro, example, etc.)
COMPONENT=metro
